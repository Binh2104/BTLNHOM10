@model BTLNHOM10.Models.Booking
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "chinhsuabooking";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chỉnh Sửa Booking</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="chinhsuabooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaBk" />
            <div class="form-group">
                <label asp-for="NgayDi" class="control-label">Ngày Đi</label>
                <input asp-for="NgayDi" class="form-control" />
                <span asp-validation-for="NgayDi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoChoBooking" class="control-label">Số Chỗ Đặt</label>
                <input asp-for="SoChoBooking" class="form-control" />
                <span asp-validation-for="SoChoBooking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayDat" class="control-label">Ngày Đặt</label>
                <input asp-for="NgayDat" class="form-control" />
                <span asp-validation-for="NgayDat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTour" class="control-label">Tên Tour</label>
                <select asp-for="MaTour" class="form-control" asp-items="ViewBag.MaTour"></select>
                <span asp-validation-for="MaTour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

