<!-- Section Tours -->

<section class="section section-tour">
	<div class="section-head">
		<div class="section-line"></div>
		<h3 class="section-title">5 TOUR ĐƯỢC ĐỀ XUẤT</h3>
		<p class="section-subtitle">Các tour du lịch tốt nhất dựa trên mức độ quan tâm của khách du lịch đến VIỆT NAM và mức độ phổ biến của các tour du lịch này</p>
	</div>
	<div class="section-tour-body">
		<div class="row">
			@foreach(var item in Model)
			{
				<div class="col-1 slides">
					<img src="@Url.Content("../img/anhdaidien/"+item.Anh)">
				<div class="overlay">
					<div class="caption">
						<div class="caption-text">
							<p>@item.TenTour</p>
								@for (int i = 0; i < @item.XepHangTour; i++)
								{
									<span class="ion-ios-star checked"></span>
								}
								@for (int i = 0; i < 5 - @item.XepHangTour; i++)
								{
									<span class="ion-ios-star"></span>
								}
							<br>
							<span class="ion-bag big"></span> &nbsp;
								<b>@item.GiaCho.ToString("#,##0") VND/người</b>
								<a asp-controller="Home" asp-action="ChiTietTour" asp-route-matour="@item.MaTour"  class="btn btn-orange btn-round right">Xem Chi Tiết</a>
						</div>
					</div>
				</div>
			</div>
			}
			
		</div>
	</div>
</section>

