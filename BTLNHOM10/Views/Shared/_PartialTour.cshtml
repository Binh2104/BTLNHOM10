@model Tour
<div class="col">
				<img src="@Url.Content("../img/anhdaidien/"+Model.Anh)">
				<div class="overlay">
					<div class="caption">
						<div class="caption-text">
							<p>@Model.TenTour</p>
				@for(int i=0; i< Model.XepHangTour; i++)
				{
					<span class="ion-ios-star checked"></span>
				}
				@for(int i=0; i<5- @Model.XepHangTour; i++)
				{
					<span class="ion-ios-star"></span>
				}
				<br />
				<span class="ion-bag big"></span> &nbsp;
							<b>@Model.GiaCho.ToString("#,##0") VND/người</b> <br>
				<a asp-controller="Home" asp-action="ChiTietTour" asp-route-matour="@Model.MaTour" class="btn btn-orange btn-round">Xem chi tiết</a>
						</div>
					</div>
				</div>
</div>